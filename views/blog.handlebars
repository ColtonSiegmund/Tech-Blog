<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#each comments as |comment| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    
      <h3>Leave a comment:</h3>
    
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Leave a comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-desc">content:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>